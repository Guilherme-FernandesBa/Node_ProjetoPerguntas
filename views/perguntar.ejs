<%- include('./partials/head.ejs')%>
<body>
    <%- include('./partials/navbar.ejs')%>
    <main>
        <div class="container">
            <div class="card" id="formulario">
                <div class="card-header">
                    <h3>Realizar Pergunta</h3>
                    <hr>
                </div>
                <div class="card-body">
                    <form method="POST" action="/enviar_pergunta">
                        <label>Título</label>
                        <input type="text" class="form-control" placeholder="Título" name="titulo" required> 
                        <br><label>Descrição</label>
                        <textarea placeholder="Descreva sua pergunta aqui" class="form-control" name="descricao" required></textarea>
                        <br>
                        <button class="btn btn-success">Perguntar</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('./partials/final.ejs')%>
</body>
